{
  "name": "tracker-back",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --forceExit --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.5.2",
    "@nestjs/core": "^6.5.2",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.5.2",
    "@nestjs/typeorm": "^6.1.3",
    "@shelf/jest-mongodb": "^1.1.0",
    "@types/imap": "^0.8.29",
    "bcrypt": "^3.0.6",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "crypto": "^1.0.1",
    "dotenv": "^8.0.0",
    "email-check": "^1.1.0",
    "email-existence": "^0.1.6",
    "hbs": "^4.0.4",
    "imap": "^0.8.19",
    "joi": "^14.3.1",
    "mail-listener-next": "^1.0.5",
    "mail-listener2": "^0.3.1",
    "mongodb": "^3.3.0-beta2",
    "mongoose": "^5.6.4",
    "nodemailer": "^6.3.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.5.2",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/joi": "^14.3.3",
    "@types/mongoose": "^5.5.8",
    "@types/node": "^10.14.12",
    "@types/nodemailer": "^6.2.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.8",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "wait-on": "^3.3.0",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/auth/mocks/",
      "/src/tvshow/mocks/",
      "/src/mocks/",
      "/src/config.service.ts",
      "/src/auth/strategies"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
